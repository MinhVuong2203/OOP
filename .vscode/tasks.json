{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build all",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/assets/function/Title.cpp",
                "${workspaceFolder}/assets/function/check.cpp",
                "${workspaceFolder}/assets/function/authenticate.cpp",
                "${workspaceFolder}/assets/function/TimeDay.cpp",
                "${workspaceFolder}/assets/function/Person.cpp",
                "${workspaceFolder}/assets/function/templateBill.cpp",
                "${workspaceFolder}/assets/function/Activity.cpp",
                "${workspaceFolder}/assets/function/Admin.cpp",
                "${workspaceFolder}/assets/function/User.cpp",
				// "${workspaceFolder}/assets/function/*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
